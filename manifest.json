{

  "manifest_version": 2,
  "name": "Auto Click",
  "version": "1.0",

  "description": "Auto clicks the german embassy VISA links",

  "icons": {
    "48": "icons/click.png"
  },

  "options_ui": {
    "page": "settings.html"
  },

  "permissions": ["storage"],

  "content_scripts": [
    {
      "matches": ["*://*.diplo.de/*"],
      "js": ["autoclick.js"]
    }
  ],
  "browser_action": {
    "browser_style": true,
    "default_popup": "settings.html",
    "default_icon": {
      "16": "icons/click.png",
      "32": "icons/click.png"
    }
  }

}